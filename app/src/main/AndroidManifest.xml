<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.naumov.illia.illianaumov">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".main.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.mvp.view.activity.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.mvp.view.activity.TransitionImageSecondActivity"
            android:parentActivityName=".main.mvp.view.activity.TransitionImageFirstActivity" />
        <activity
            android:name=".main.mvp.view.activity.TransitionImageFirstActivity"
            android:parentActivityName=".main.mvp.view.activity.MainActivity" />
        <activity
            android:name=".main.mvp.view.activity.CurrencyActivity"
            android:parentActivityName=".main.mvp.view.activity.MainActivity" />
        <activity android:name=".main.mvp.view.activity.SettingsActivity"
            android:parentActivityName=".main.mvp.view.activity.MainActivity"/>

        <service
            android:name=".main.services.CurrencyAlarmService"
            android:enabled="true" />

        <receiver android:name=".main.services.AlarmReceiver" />
    </application>

</manifest>